
@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

@if (ViewBag.Products != null && ViewBag.Products.Count > 0)
{
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Category ID</th>
            <th>Product Name</th>
        </tr>
        @foreach (Product product in ViewBag.Products)
        {
            <tr>
                <td>@(product.ID)</td>
                <td>@(product.CategoryID)</td>
                <td>@(product.Name)</td>

            </tr>
        }

    </table>
}
else
{
    <p>No Products Exist!</p>

}

